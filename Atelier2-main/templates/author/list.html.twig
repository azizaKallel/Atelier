

{% block body %}
    <h1>Liste des auteurs</h1>
    
    {% if authors is defined and authors|length > 0 %}
        <ul>
            {% for author in authors %}
                <li>
                    ID: {{ author.id }}<br>
                    Nom: {{ author.username|upper }}<br>
                    Email: {{ author.email }}<br>
                    Nombre de livres: {{ author.nb_books }}<br>
                    Image: <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="200" height="200"><br>
                    <a href="{{ path('author_details', {'id': author.id}) }}">Details
                    </a>
<br>

                    <hr>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun auteur n'est disponible pour le moment.</p>
    {% endif %}
{% endblock %}
